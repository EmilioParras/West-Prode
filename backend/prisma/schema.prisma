datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// TABLAS
model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  email       String       @unique
  password    String
  totalPoints Int          @default(0)
  predictions Prediction[]
}

model Match {
  id             Int          @id @default(autoincrement())
  apiMatchId     Int          @unique  // ID de la API externa
  leagueName     String
  homeTeam       String
  awayTeam       String
  homeLogo       String?
  awayLogo       String?
  matchDate      DateTime
  status         String       // "NS" (Not Started), "FT" (Finished), etc.
  homeGoals      Int?         // Nulo hasta que el partido termina
  awayGoals      Int?
  predictions    Prediction[]
}

model Prediction {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  match      Match    @relation(fields: [matchId], references: [id])
  matchId    Int
  homeScore  Int      // Goles que el usuario pronostica
  awayScore  Int
  createdAt  DateTime @default(now())
}